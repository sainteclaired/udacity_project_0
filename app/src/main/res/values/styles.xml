<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_view_heading">
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>

    <style name="button_style_base">
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_tiny</item>
    </style>

    <style name="button_style_orange" parent="button_style_base">
        <item name="android:background">@color/button_orange_background</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="button_style_blue" parent="button_style_base">
        <item name="android:background">@color/button_blue_background</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>
